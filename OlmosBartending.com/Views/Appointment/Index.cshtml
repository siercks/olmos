@model OlmosBartending.com.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBooking.cshtml";
}
<link rel="stylesheet" href="css/booking.css" />
<style>
    table.table tr th, table.table tr td {
        border-color: #e9e9e9;
    }
    table.table-striped tbody tr:nth-of-type(odd) {
    	background-color: #494949;
        color:#ffffff;
	}
    .table-wrapper {
        background: #262626;
        padding: 20px;
        margin: 30px 0;
        box-shadow: 0 1px 1px rgba(0,0,0,.05);
    }
</style>


<div class="container">
    <h1 class="text-center">Index</h1>
    <div class="table-wrapper">
        <table class="table table-striped" style="">
            <thead>
                <tr class="text-lg">
                    <th class="text-decoration-underline text-sm-end">
                        @*displaying property name *@
                        @Html.DisplayNameFor(model=>model.AppointmentList.First().EventId)
                    </th>
                    <th class="text-decoration-underline text-sm-center">
                        @Html.DisplayNameFor(model=>model.AppointmentList.First().CustomerName)
                    </th>
                    <th class="text-decoration-underline">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AppointmentList)
                {
                        <tr>
                            <td class="text-sm-end">#@Html.DisplayFor(modelitem=>item.EventId)</td>@*property value*@
                            <td class="text-sm-center">@Html.DisplayFor(modelitem=>item.CustomerName)</td>
                            <td class="text-sm-start">
                            <a asp-action="Details" asp-controller="Appointment" asp-route-id="@item.EventId">Details</a> |
                            <a asp-action="Edit" asp-controller="Appointment" asp-route-id="@item.EventId">Edit</a> |
                            <a asp-action="Delete" asp-controller="Appointment" asp-route-id="@item.EventId">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
    @*<p style="font-size:16px" class="text-center">
        <button class="btn btn-warning" asp-controller="Appointment" asp-action="Create">Create New</button>
    </p>*@
    <a asp-action="Create">Create New Appointment</a>
</div>